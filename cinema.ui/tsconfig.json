{
  "compilerOptions": {
    "noUnusedLocals": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "target": "ES6",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    //    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // Other
    "paths": {
      "Components/*": [
        "./src/components/*"
      ],
      "Configs/*": [
        "./src/configs/*"
      ],
      "Hooks/*": [
        "./src/hooks/*"
      ],
      "Types/*": [
        "./src/types/*"
      ],
      "Utils/*": [
        "./src/utils/*"
      ],
      "Constants/*": [
        "./src/constants/*"
      ],
      "*": [
        "./src/*.d.ts"
      ]
    }
  },
  "include": [
    "vite.config.ts",
    "src"
  ]
}
