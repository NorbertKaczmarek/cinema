{
  "compilerOptions": {
    "noUnusedLocals": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "target": "ES6",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    //    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "vite.config.ts",
    "src"
  ]
}
